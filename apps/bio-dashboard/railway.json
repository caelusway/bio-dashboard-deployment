{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && cd apps/bio-dashboard && bun install && bun run build"
  },
  "deploy": {
    "startCommand": "cd apps/bio-dashboard && bun run preview --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
